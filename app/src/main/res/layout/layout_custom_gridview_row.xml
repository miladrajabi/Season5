<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgListView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:background="@color/colorAccent"
        android:scaleType="center"
        android:src="@drawable/harrow" />

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgListView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dp8"
        android:text="@string/harrow"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSubject"
        android:lineSpacingExtra="@dimen/sp12"
        android:maxHeight="100dp"
        android:paddingLeft="@dimen/dp16"
        android:paddingTop="@dimen/dp8"
        android:text="@string/harrow_desc"
        android:textColor="@color/colorAccent"
        android:textSize="5sp" />
</RelativeLayout>